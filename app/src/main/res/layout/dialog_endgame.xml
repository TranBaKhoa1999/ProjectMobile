<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FF683215"
    android:layout_width="500dp"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/textViewAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="PLAYER 1 WIN !!!"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFE600"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonHomeDialog"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_dialog_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F1B00A"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlertDialog" />

    <Button
        android:id="@+id/buttonPlayAgainDialog"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/custom_dialog_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F1B00A"
        android:text="Play again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlertDialog" />
</androidx.constraintlayout.widget.ConstraintLayout>