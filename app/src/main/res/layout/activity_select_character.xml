<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCharacterActivity">


    <ImageView
        android:id="@+id/imageViewPlayer1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hunterhuman" />

    <ImageView
        android:id="@+id/imageViewPlayer2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/archerskeleton" />

    <Button
        android:id="@+id/buttonSelectCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="40dp"
        android:text="Select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollViewCharacter"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlayer1"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCharWarM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/warriorhuman" />

            <ImageView
                android:id="@+id/imageViewPriM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/priesthuman" />

            <ImageView
                android:id="@+id/imageViewHunM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hunterhuman" />

            <ImageView
                android:id="@+id/imageViewRogM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/roguehuman" />
            <ImageView
                android:id="@+id/imageViewAssS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/assasinskeleton" />
            <ImageView
                android:id="@+id/imageViewArcS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/archerskeleton" />
            <ImageView
                android:id="@+id/imageViewKniS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/knightskeleton"/>
            <ImageView
                android:id="@+id/imageViewWarS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/warriorskeleton" />
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/backMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="CloseActivity"
        android:text="Back"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>